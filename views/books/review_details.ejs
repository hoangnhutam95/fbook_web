<section class="relative fix gray-bg">
    <div class="container">
       <div class="space-30"></div>
       <div class="row">
          <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 text-center">
             <h4><%= data.items.title %></h4>
             <div class="space-10"></div>
             <div class="title-bar blue">
                <ul class="list-inline list-unstyled">
                   <li><i class="icofont icofont-square"></i></li>
                   <li><i class="icofont icofont-square"></i></li>
                </ul>
             </div>
          </div>
       </div>
       <div class="row">
          <div class="col-md-1">
             <% if(data.items.current_vote == configs.words.up_vote ){ %>
             <button class="btn_vote btn_voted up_vote" value="2">
             <i class="icofont icofont-caret-up vote_review"></i>
             </button>
             <% }else{ %>
             <button class="btn_vote up_vote" value="2">
             <i class="icofont icofont-caret-up vote_review"></i>
             </button>
             <% } %>
             <input type="hidden" id="review_data" value="<%= data.items.id %>">
             <input type="hidden" id="user_id<%= data.items.id %>" value="<%= userId %>">
             <span id="btn_show_vote"><%= data.items.up_vote - data.items.down_vote %></span>
             <% if(data.items.current_vote == configs.words.down_vote ){ %>
             <button class="btn_vote btn_voted down_vote" value="1">
             <i class="icofont icofont-caret-down vote_review"></i>
             </button>
             <% }else{ %>
             <button class="btn_vote down_vote" value="1">
             <i class="icofont icofont-caret-down vote_review"></i>
             </button>
             <% } %>
          </div>
          <div class="col-xs-12 pull-right col-md-11 padding60 wow fadeInRight">
             <div class="book-content">
                <%= data.items.content %>
             </div>
          </div>
       </div>
    </div>
 </section>
 <section class="relative">
    <div class="container">
       <div class="panel">
          <div class="panel-heading">
             <ul class="nav nav-tabs">
                <li class="active"><a data-toggle="tab" href="#user_review">User comnents</a></li>
             </ul>
          </div>
          <div class="panel-body">
             <div class="tab-content">
                <div class="tab-pane fade in active" id="user_review">
                   <div class="row event-list">
                      <% if (data.items.comments.length > 0) { %>
                      <% data.items.comments.forEach((comment) => { %>
                      <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-9 revsdv" id="">
                         <div class="event-item wow fadeInRight">
                            <h4 class="show tip-left"><%= comment.created_at %></h4>
                            <div class="well padding5 owner-clear relative-position">
                               <div class="media">
                                  <div class="media-left">
                                     <a href="#">
                                     <img src="/images/user/icon_user_default.png" class="media-object  w-70-h-70" alt="library">
                                     </a>
                                  </div>
                                  <div class="media-body">
                                     <a href="#">
                                        <h4 class="media-heading list-inline list-unstyled rating-star">
                                           <%= comment.user.name %>
                                        </h4>
                                     </a>
                                     <p>
                                        <%= comment.content %>
                                     </p>
                                  </div>
                               </div>
                            </div>
                         </div>
                      </div>
                      <% })} else { %>
                      <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-9 revsdv" id="no_comment">
                         Not yet comment
                      </div>
                      <% } %>
                   </div>
                   <div class="row ">
                      <form action="/books/review-details/comment" method="post">
                         <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-9 p-0">
                            <div class="col-xs-12 col-sm-12 col-md-12">
                               <div class="form-group">
                                  <textarea name="review_content" id="content" class="form-control bg-info b-r-0" cols="50" rows="5"placeholder="Enter your review..." required> </textarea>
                                  <input type="hidden" name="review_user_id" value="<%= userId %>"/>
                                  <input type="hidden" name="review_review_id" value="<%= data.items.id %>"/>
                                </div>
                            </div>
                         </div>
                         <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-9 p-0">
                            <div class="col-xs-12 col-sm-12 col-md-12">
                               <button type="submit" class="btn btn-primary hover-btn-default m-0 b-r-0" id> Review <i class="fa fa-long-arrow-right"></i></button>
                            </div>
                         </div>
                      </form>
                   </div>
                </div>
             </div>
          </div>
       </div>
    </div>
    <div class="space-20"></div>
 </section>
